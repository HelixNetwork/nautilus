{
  "name": "wallet",
  "productName": "Helix Wallet",
  "author": "Netobjex",
  "version": "0.1.0",
  "private": true,
  "description": "Desktop wallet for Helix",
  "moduleRoots": [
    ".",
    "src",
    "../shared"
  ],
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@fortawesome/fontawesome-svg-core": "^1.2.19",
    "@fortawesome/free-regular-svg-icons": "^5.9.0",
    "@fortawesome/free-solid-svg-icons": "^5.9.0",
    "@fortawesome/react-fontawesome": "^0.1.4",
    "@helixnetwork/sha3": "^1.0.0-alpha.2",
    "@helixnetwork/transaction-converter": "^1.0.0-alpha.2",
    "argon2": "^0.24.0",
    "bootstrap": "^4.3.1",
    "classnames": "^2.2.6",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "dart-sass": "^1.20.1",
    "electron-packager": "^13.1.1",
    "electron-settings": "^3.2.0",
    "electron-updater": "^4.0.6",
    "express": "^4.17.0",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "i18next": "^15.1.1",
    "jquery": "^3.4.1",
    "kdbxweb": "^1.2.7",
    "keytar": "^4.10.0",
    "mini-css-extract-plugin": "^0.7.0",
    "perfect-scrollbar": "^1.4.0",
    "popper.js": "^1.15.0",
    "react": "^16.8.6",
    "react-charts": "^2.0.0-alpha.12",
    "react-dom": "^16.8.6",
    "react-i18next": "^9.0.10",
    "react-lottie": "^1.2.3",
    "react-markdown": "^4.0.8",
    "react-redux": "^7.0.3",
    "react-router-dom": "^5.0.0",
    "react-scripts": "3.0.0",
    "react-transition-group": "^4.0.1",
    "realm": "2.23.0",
    "redux": "^4.0.1",
    "redux-freeze": "^0.1.7",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "typescript": "^3.4.5",
    "url-loader": "^1.1.2",
    "wait-on": "^3.2.0",
    "webpack-hot-middleware": "^2.25.0"
  },
  "scripts": {
    "start": "yarn run build && concurrently --kill-others  \" yarn run devserver \"  \"wait-on http://localhost:1074 && cross-env NODE_ENV=development  electron -r @babel/register main.js\"",
    "postinstall": "electron-builder install-app-deps",
    "devserver": "node server.js",
    "style:shots": "node scripts/puppeteer.js",
    "build": "rimraf dist && concurrently \"yarn run build-main\" \"yarn run build-app\"",
    "build-main": "./node_modules/.bin/cross-env NODE_ENV=production webpack --env=production --config webpack.config/config.main.js",
    "build-app": "./node_modules/.bin/cross-env NODE_ENV=production webpack --env=production --config webpack.config/config.app.js",
    "compile": "yarn run build && yarn run compile:linux && yarn run compile:mac && yarn run compile:win",
    "compile:linux": "./node_modules/.bin/electron-builder --linux --x64",
    "compile:mac": "./node_modules/.bin/cross-env electron-builder --mac --x64",
    "compile:win": "./node_modules/.bin/electron-builder --win --x64",
    "auditjs": "./../../node_modules/.bin/auditjs -n -l error -w whitelist.json",
    "prepare-release": "yarn version && echo Successfully incremented version number! Please remember to run git add ., git commit, git push --tags, and git push",
    "release": "./node_modules/.bin/cross-env CSC_IDENTITY_AUTO_DISCOVERY=false build -mwl",
    "package:win": "electron-packager . helix-app --platform=win32 --arch=x64 --overwrite=true --out=../../release",
    "package:linux": "electron-packager . helix-app --platform=linux --arch=x64 --overwrite=true --out=../../release",
    "package:mac": "electron-packager . helix-app --platform=darwin --arch=x64 --prune=true --overwrite=true --out=../../release",
    "dist": "build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "main": "dist/main.js",
  "build": {
    "productName": "Helix Wallet",
    "artifactName": "${name}-${version}.${ext}",
    "appId": "ai.helix.wallet",
    "asar": true,
    "directories": {
      "buildResources": "./assets",
      "output": "./out"
    },
    "extends": null,
    "files": [
      "./dist/**/*",
      "./build/**/*",
      "./node_modules/**/*",
      "./package.json",
      "./static/**/*",
      "!node_modules/realm/android${/*}",
      "!node_modules/realm/build${/*}",
      "!node_modules/realm/react-native${/*}",
      "!node_modules/realm/scripts${/*}",
      "!node_modules/realm/src${/*}",
      "!node_modules/realm/vendor${/*}"
    ],
    "dmg": {
      "iconSize": 120,
      "title": "${productName}",
      "contents": [
        {
          "x": 520,
          "y": 250,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 170,
          "y": 250,
          "type": "file"
        }
      ]
    },
    "win": {
      "publisherName": "",
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "desktop": {
        "Name": "Helix",
        "Comment": "Desktop wallet for Helix",
        "Categories": "Office;Network;Finance"
      }
    },
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dmg",
        "zip"
      ]
    }
  },
  "homepage": "./",
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.4",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.0.0",
    "electron": "3.0.15",
    "electron-builder": "20.38.5",
    "electron-devtools-installer": "^2.2.4",
    "electron-is-dev": "^1.1.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.3.1"
  }
}
